@using Microsoft.Extensions.Options
@using AspNetCoreIdentityServer.Models
@{
    ViewData["Title"] = "AspNetCoreIdentityServer Home";
}
@inject IOptions<StsConfig> OptionsStsConfig

@if (User.Identity.IsAuthenticated)
{
    <h1>Hi @User.Identity.Name</h1>
}
else
{
    <br />
}

<a href="@OptionsStsConfig.Value.ClientUrl">
    ClientUrl
</a>

